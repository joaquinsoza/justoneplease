generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GiftList {
  id        String   @id @default(cuid())
  name      String
  shareId   String   @unique @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  items     GiftItem[]
  
  @@map("gift_lists")
}

model GiftItem {
  id          String   @id @default(cuid())
  name        String
  isBought    Boolean  @default(false)
  boughtAt    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  giftListId  String
  giftList    GiftList @relation(fields: [giftListId], references: [id], onDelete: Cascade)
  
  @@map("gift_items")
}
